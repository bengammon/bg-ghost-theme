{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

<header>
    <div class="header__content">

        <div class="header__logo">
            <a class="link link--plain" href="{{@blog.url}}">
                {{#if @blog.logo}}
                    <img class="site-logo" src="{{@blog.logo}}" alt="{{@blog.title}}" />
                {{else}}
                    {{@blog.title}}
                {{/if}}
            </a>
        </div>
        
        {{> "social-nav"}}

    </div>
</header>

<section class="section section--intro">
    <div class="section__content">

        <h1>I work as a front end dev at <a href="https://moov2.com/">Moov2</a>, live by a <a href="https://www.thenewforest.co.uk/">forest near the sea</a>, play plenty of <a href="https://steamcommunity.com/profiles/76561198002057511/">Rocket League</a>, listen to an <a href="https://open.spotify.com/user/11148623296?si=2ZK_nXhoSn-wOa-w-s81Og">abundance of music</a> and try not to take myself too seriously.</h1>

    </div>
</section>

<section class="section">
    <div class="section__content">

        <div class="post-card-wrapper">
            {{#foreach posts}}

                {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
                {{> "post-card"}}

            {{/foreach}}
        </div>

    </div>
</section>